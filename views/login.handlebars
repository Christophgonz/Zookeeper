<link rel="stylesheet" href="./css/login.css">
<div class="container d-flex flex-wrap justify-content-center bg-secondary">

<div class="row">

  <div class="row-ex">
    <div class="">
      <h2>Login</h2>

      <form class="form login-form">
        <div class="form-group-ex">
          <label class="form-label" for="email-login">Email:</label>
          <input class="form-control" type="text" id="email-login" />
        </div>
        <div class="form-group-ex">
          <label for="password-login">Password:</label>
          <input class="form-control" type="password" id="password-login" />
        </div>
        <div class="form-group-ex">
          <button class="btn btn-primary" type="submit">Login</button>
        </div>
      </form>
    </div>
    <div class="">
      <h2>Register Here</h2>

      <form class="form signup-form">
        <div class="form-group-ex">
          <label class="form-label" for="name-signup">Username:</label>
          <input class="form-control" type="text" id="name-signup" />
        </div>
        <div class="form-group-ex">
          <label for="email-signup">Email:</label>
          <input class="form-control" type="text" id="email-signup" />
        </div>
        <div class="form-group-ex">
          <label for="password-signup">Password:</label>
          <input class="form-control" type="password" id="password-signup" />
        </div>
        <div class="form-group-ex">
          <button class="btn btn-primary" type="submit">Create Account</button>
        </div>
      </form>
    </div>
  </div>
</div>
</div>
<script src="/js/login.js"></script>

